#posts-list
  min-width: 700px
  flex: 1
  flex-grow: 1
  width: 100%
  position: relative
  border-right: 1px solid $border-color
  padding-top: 40px
  #posts-header
    height: 40px
    border-bottom: 1px solid $border-color
    width: 100%
    top: 0
    position: absolute
    #search
      width: calc(100% - 560px)
      outline: none
      height: 24px
      border: 1px solid $border-color
      border-radius: 12px
      position: absolute
      right: 40px
      top: 8px
      padding-left: 10px
      font-size: 12px
      &:active, &:focus
        border-color: $green
    #search-icon
      position: absolute
      background-image: url(../images/svg/magnifying-glass.svg)
      opacity: 0.3
      width: 16px
      height: 16px
      background-size: 16px
      right: 14px
      top: 11px
    #posts-filter
      padding-left: 16px
      .filter
        float: left
        line-height: 40px
        margin: 0 16px
        padding: 0 8px
        text-transform: uppercase
        font-size: 12px
        color: #959595
        cursor: pointer
        &:hover
          color: $text-gray - #444
        &.active
          border-bottom: 4px solid $green
          line-height: 32px
          padding-top: 4px
          color: #000
          &:hover
            border-bottom: 4px solid ($green + #111)
            line-height: 32px
            padding-top: 4px
            color: #000
#posts-list-container
  height: calc(100vh - 40px)
  overflow-y: scroll
  .post
    position: relative
    padding-left: 138px
    height: 81px
    border-bottom: 1px solid $border-color
    overflow: hidden
    .info
      padding-left: 40px
      img.user-avatar
        width: 30px
        min-width: 30px
        height: 30px
        border-radius: 30px
        background-color: $text-gray
        margin: 0 auto
        position: absolute
        left: 0
        bottom: 10px
      .user-name
        font-size: 13px
        font-weight: lighter
        cursor: pointer
        margin-bottom: 2px
        &:hover
          text-decoration: underline
      .date
        font-size: 10px
        opacity: 0.5
        line-height: 10px
    .details
      position: absolute
      height: 40px
      right: 0
      top: 20px
      width: 161px
      color: $text-gray

    .preview
      width: 120px
      height: 64px
      background-color: #ccc
      border-radius: 3px
      position: absolute
      left: 8px
      top: 8px
      cursor: zoom-in
    .title-container
      height: 42px
      margin-bottom: 6px
      padding-top: 10px
      width: calc(100% - 200px)
      position: relative
      &.big
        .title
          font-weight: 100
          line-height: 20px
          font-size: 20px
    .title
      font-weight: 500
      line-height: 14px
      cursor: pointer
      font-size: 12px
      visibility: visible
      transition: all 0.3s ease
    .big-title
      visibility: hidden
      font-weight: 100
      line-height: 20px
      white-space: nowrap
      position: absolute
      cursor: pointer
      font-size: 20px
      height: 20px


    .bottom-container
      position: absolute
      bottom: 10px
      left: 136px
      height: 24px
      width: calc(100% - 320px)
      .vote-count
        float: left
        display: inline-block
        border: 1px solid $green
        line-height: 20px
        padding: 0 8px
        border-radius: 2px
        margin-right: 4px
        font-size: 18px
        margin-top: 4px
        color: $green
    .tags
      padding-top: 8px
      .tag
        opacity: 0.5
        background-color: $green
        background: linear-gradient(to right, $green 0%, ($green - #111) 100%)
        border-radius: 2px
        display: inline-block
        color: #fff
        margin-right: 4px
        font-size: 10px
        letter-spacing: 1px
        line-height: 16px
        cursor: pointer
        &.main
          opacity: 1
        &:hover
          opacity: 0.9
        .name
          text-transform: uppercase
          float: left
          padding: 0 6px
        .count
          float: left
          border-left: 1px solid rgba(255,255,255,0.5)
          padding: 0 6px
